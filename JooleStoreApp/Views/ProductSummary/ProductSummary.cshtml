        <table>
            @foreach (ProductM prod in Model.Products)
            {
                <tr>
                    <th>Product Name</th>
                    <td>@prod.ProductName</td>
                </tr>
                <tr>
                    <th>Product Series</th>
                    <td>@prod.Series</td>
                </tr>
                <tr>
                    <th>Product Model</th>
                    <td>@prod.Model</td>
                </tr>
                <tr>
                    <th>Model Year</th>
                    <td>@prod.ModelYear</td>
                </tr>
            }
        </table> <br />

        <h4> Product Type </h4>
        <table>
            @foreach (KeyValuePair<string, string> keyVal in Model.ProductTypes)
            {
                <tr>
                    <th>@keyVal.Key</th>
                    <td>@keyVal.Value</td>
                </tr>
            }
        </table> <br />

        <h4> Product Tech Specs </h4>
        <table>
            @foreach (KeyValuePair<string, string> keyValue in Model.TechSpecs)
            {
                <tr>
                    <th>@keyValue.Key</th>
                    <td>@keyValue.Value</td>
                </tr>
            }
        </table>

    </div>
</div>