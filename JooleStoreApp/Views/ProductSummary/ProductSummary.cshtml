            <tr>
                <th>Product Name</th>
                <td>@*Html.DisplayFor(Product => Product.ProductName)*@</td>
            </tr>
            <tr>
                <th>Product Series</th>
                <td>@*Html.DisplayFor(Product => Product.Series)*@</td>
            </tr>
            <tr>
                <th>Product Model</th>
                <td>@*Html.DisplayFor(Product => Product.Model)*@</td>
            </tr>
            <tr>
                <th>Model Year</th>
                <td>@*Html.DisplayFor(Product => Product.ModelYear)*@</td>
            </tr>
